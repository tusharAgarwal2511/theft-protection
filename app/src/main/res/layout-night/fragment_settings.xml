<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context=".fragments.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/settings_fragment_settings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Settings"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settings_fragment_app_theme_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Dark Mode"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/settings_fragment_settings_text"
        app:layout_constraintTop_toBottomOf="@+id/settings_fragment_settings_text" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/settings_fragment_theme_change_switch"
        android:layout_width="48dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        app:thumbTint="@drawable/theme_switch_selector_dark"
        app:layout_constraintBottom_toBottomOf="@+id/settings_fragment_app_theme_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settings_fragment_app_theme_text" />

</androidx.constraintlayout.widget.ConstraintLayout>